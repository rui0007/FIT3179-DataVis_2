{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"COVID-19 Active Cases (10 Oct 2020)",
  "width": "container",
  "height": 300,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rui0007/FIT3179-DataVis_2/main/js/state_level.json",
        "format": {
          "type": "topojson",
          "feature": "state_level"
        }
      },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "fill": "blue",
        "fillOpacity": 0.1,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rui0007/FIT3179-DataVis_2/main/data/covid-19_clinics_clean.csv"
      },
      "projection": {
        "type": "mercator"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": { "value": 10 },
        "color": { "value": "steelblue" }
      }
    }
  ]
}
