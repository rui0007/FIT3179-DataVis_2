{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": "Bullying Statistics in Metropolitan Melbourne",
    "width": "container",
    "height": 300,
    "projection": {
      "type": "conicEqualArea",
      "parallels": [
        -36,
        -38
      ],
      "rotate": [
        -145,
        0,
        0
      ]
    },
    "data": {
      "url": "https://raw.githubusercontent.com/cywng/FIT3179/main/Data/MelbGeelongLGAtopojson.json",
      "format": {
        "type": "topojson",
        "feature": "VICLGAgeojson"
      }
    },
    "encoding": {
      "tooltip": [
        {
          "field": "properties.vic_lga__3",
          "type": "nominal",
          "title": "Local Government Area"
        },
        {
          "field": "Portion Bullied",
          "type": "quantitative",
          "title": "Percent Bullied"
        }
      ]
    },
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "fill": "gainsboro",
          "stroke": "white"
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.vic_lga__3",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/cywng/FIT3179/main/Data/JoinedDataFiltered.csv"
              },
              "key": "LGA",
              "fields": [
                "Portion Bullied"
              ]
            }
          }
        ],
        "mark": {
          "type": "geoshape"
        },
        "encoding": {
          "color": {
            "field": "Portion Bullied",
            "type": "quantitative",
            "title": [
              "Percent of students bullied"
            ],
            "scale": {
              "type": "threshold",
              "domain": [10,14,18,22],
              "range": ["#c6dbef","#9ecae1","#6baed6","#4292c6","#2171b5"]
            },
            "legend": {
              "orient": "bottom"
            }
          }
        }
      }
    ],
    "config": {
      "view": {
        "stroke": null
      },
      "axis": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "legend": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "header": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "title": {
        "font": "Oxygen",
        "fontSize": 16,
        "fontWeight": 600
      }
    }
  }