{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 test Cases 2020",
    "width": 400,
    "height": 350,
    "data": {
      "url": "https://raw.githubusercontent.com/rui0007/FIT3179-DataVis_2/main/js/state_level.json",
      "format": {
            "type": "topojson",
            "feature": "state_level"
          }
    },
    "transform": [{
        "lookup": "properties.STATE_NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/rui0007/FIT3179-DataVis_2/main/data/chmap.csv"
          },
          "key": "State",
          "fields": ["Test"]
        }
      }
    ],
    "projection": {
      "type": "mercator"
    },
    "mark": {
      "type": "geoshape"
      },
    "encoding": {
      "color": {
        "field": "Test",
        "type": "quantitative",
        "title":["Total"],
        "scale":{
            "domain":[
                400000,
                3000000,
                6000000,
                9000000
            ],
            "range":["#c6dbef","#9ecae1","#6baed6","#4292c6","#2171b5"],
            "type": "threshold"
        }
      },
      "opacity":{
          "value":0.6
      },
      "tooltip": [
        {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
        {"field": "Test", "type": "quantitative"}
      ]
    },
    "config": {
        "view": {
            "stroke":null
        },
        "header": {
            "labelAlign":"center",
            "labelFont":"Oxygen",
            "titleFont":"Oxygen"
        },
        "title": {
            "font":"Oxygen",
            "fontSize":16,
            "fontWeight":600
        }
    }
  
}
  