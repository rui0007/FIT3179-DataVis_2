{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"heatmap"
  "data": {
    "url": "https://raw.githubusercontent.com/rui0007/FIT3179-DataVis_2/main/data/heatmap_state.csv"
  },
  "params": [{ "name": "highlight", "select": "point" }],
  "mark": { 
    "type": "rect", 
    "strokeWidth": 2 ,
    "tooltip":true},
  "encoding": {
    "y": {
      "field": "state",
      "type": "nominal"
    },
    "x": {
      "field": "month",
      "type": "nominal",
      "sort": [
        "JAN",
        "FEB",
        "MAR",
        "APR",
        "MAY",
        "JUN",
        "JUL",
        "AUG",
        "SEP",
        "OCT"
      ]
    },
    "fill": {
      "field": "confirmed",
      "type": "quantitative"
    },
    "stroke": {
      "condition": {
        "param": "highlight",
        "empty": false,
        "value": "black"
      },
      "value": null
    },
    "opacity": {
      "condition": { "param": "highlight", "value": 1 },
      "value": 0.5
    },
    "order": { "condition": { "param": "highlight", "value": 1 }, "value": 0 }
  },
  "config": {
    "scale": {
      "bandPaddingInner": 0,
      "bandPaddingOuter": 0
    },
    "view": { "step": 40 },
    "range": {
      "ramp": {
        "scheme": "yellowgreenblue"
      }
    },
    "axis": {
      "domain": false
    }
  }
}
