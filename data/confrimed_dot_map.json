{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 900,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rui0007/FIT3179-DataVis_2/state_level.json",
        "format": {
          "type": "topojson",
          "feature": "map"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "fill": "white",
        "fillOpacity": 0.2,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rui0007/FIT3179-DataVis_2/confrimed_location_clean.csv"
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "Lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Lat",
          "type": "quantitative"
        },
        "size": { "value": 5 },
        "color": { "value": "steelblue" }
      }
    }
  ]
}
